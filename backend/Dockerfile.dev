FROM rust:slim-bookworm
WORKDIR /app

# Install system dependencies required for compiling actix-web, sqlx, etc.
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    clang \
    lld \
    && rm -rf /var/lib/apt/lists/*

# Install cargo-watch for hot reloading
RUN cargo install cargo-watch

# We do NOT copy source here because we will bind-mount it in docker-compose.dev.yml
# This allows you to edit files on your host and have them available in the container immediately.

# Simple development command. 
# We use cargo-watch to auto-restart the server on file changes.
CMD ["cargo", "watch", "-x", "run --bin backend"]
